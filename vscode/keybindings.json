[
  // ctrl n toggle 函数参数提示
  {
    "key": "ctrl+n",
    "command": "editor.action.triggerParameterHints",
    "when": "editorHasSignatureHelpProvider && editorTextFocus"
  },
  {
    "key": "ctrl+n",
    "command": "closeParameterHints",
    "when": "editorFocus && parameterHintsVisible"
  },
  // ctrl+alt+j 跳到下一个函数重载
  {
    "key": "ctrl+alt+j",
    "command": "showNextParameterHint",
    "when": "editorFocus && parameterHintsMultipleSignatures && parameterHintsVisible"
  },
  // ctrl+alt+k 跳到上一个函数重载
  {
    "key": "ctrl+alt+k",
    "command": "showPrevParameterHint",
    "when": "editorFocus && parameterHintsMultipleSignatures && parameterHintsVisible"
  },
  // alt j/k 将选中的代码块上下移动
  {
    "key": "alt+k",
    "command": "editor.action.moveLinesUpAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "alt+j",
    "command": "editor.action.moveLinesDownAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  // 在任意地方都可以通过 <C-c> 回到编辑区（除了终端模式下之外）
  {
    "key": "ctrl+c",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "!terminalFocus && !editorTextFocus"
  },
  // <C-h/j/k/l> 窗口跳转
  {
    "key": "ctrl+h",
    "command": "vim.remap",
    "when": "vim.mode == 'Normal' && !suggestWidgetDetailsVisible && !inQuickOpen && !panelFocus",
    "args": {
      "after": [
        "<C-w>",
        "h"
      ]
    }
  },
  {
    "key": "ctrl+j",
    "command": "vim.remap",
    "when": "vim.mode == 'Normal' && !suggestWidgetDetailsVisible && !inQuickOpen && !panelFocus",
    "args": {
      "after": [
        "<C-w>",
        "j"
      ]
    }
  },
  {
    "key": "ctrl+k",
    "command": "vim.remap",
    "when": "vim.mode == 'Normal' && !suggestWidgetDetailsVisible && !inQuickOpen && !panelFocus",
    "args": {
      "after": [
        "<C-w>",
        "k"
      ]
    }
  },
  {
    "key": "ctrl+l",
    "command": "vim.remap",
    "when": "vim.mode == 'Normal' && !suggestWidgetDetailsVisible && !inQuickOpen && !panelFocus",
    "args": {
      "after": [
        "<C-w>",
        "l"
      ]
    }
  },
  // <A-h> 切换到左标签页
  {
    "key": "alt+h",
    "command": "vim.remap",
    "when": "vim.mode == 'Normal'",
    "args": {
      "after": [
        "g",
        "T"
      ]
    }
  },
  // <A-l> 切换到右标签页
  {
    "key": "alt+l",
    "command": "vim.remap",
    "when": "vim.mode == 'Normal'",
    "args": {
      "after": [
        "g",
        "t"
      ]
    }
  },
  // alt+. 触发建议
  {
    "key": "alt+.",
    "command": "editor.action.triggerSuggest"
  },
  // ctrl+j 跳转到下一条建议
  {
    "key": "ctrl+j",
    "command": "selectNextSuggestion"
  },
  // ctrl+k 跳转到上一条建议
  {
    "key": "ctrl+k",
    "command": "selectPrevSuggestion"
  },
  // 取消默认的 tab 接受选中的建议行为
  {
    "key": "tab",
    "command": "-acceptSelectedSuggestion",
    "when": "suggestWidgetVisible && textInputFocus"
  },
  // ==================== 文件管理器 ====================
  // r 重命名文件
  {
    "key": "r",
    "command": "renameFile",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  // d 删除文件
  {
    "key": "d",
    "command": "deleteFile",
    "when": "explorerViewletVisible && filesExplorerFocus  && !explorerResourceReadonly && !inputFocus"
  },
  // a 新建文件
  {
    "key": "a",
    "command": "explorer.newFile",
    "when": "filesExplorerFocus && !inputFocus"
  },
  // shift+a 新建目录
  {
    "key": "shift+a",
    "command": "explorer.newFolder",
    "when": "filesExplorerFocus && !inputFocus"
  },
  // ==================== 终端 ====================
  // ctrl+\ toggle terminal
  {
    "key": "ctrl+\\",
    "command": "workbench.action.terminal.toggleTerminal",
    "when": "terminal.active"
  },
  // ctrl+shift+\ 创建新终端
  {
    "key": "ctrl+shift+\\",
    "command": "workbench.action.terminal.new",
    "when": "terminal.active"
  },
  // ctrl+alt+\ 终止活动终端
  {
    "key": "ctrl+alt+\\",
    "command": "workbench.action.terminal.kill",
    "when": "terminal.active"
  },
  // ctrl+shift+j 切换到下一终端
  {
    "key": "ctrl+shift+j",
    "command": "workbench.action.terminal.focusPreviousPane",
    "when": "terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported"
  },
  // ctrl+shift+k 切换到上一终端
  {
    "key": "ctrl+shift+k",
    "command": "workbench.action.terminal.focusPreviousPane",
    "when": "terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported"
  },
  // 最大化终端
  {
    "key": "ctrl+m",
    "command": "workbench.action.toggleMaximizedPanel",
    "when": "terminalFocus"
  },
  {
    "key": "alt+l alt+o",
    "command": "-extension.liveServer.goOnline",
    "when": "editorTextFocus"
  },
  {
    "key": "alt+l alt+c",
    "command": "-extension.liveServer.goOffline",
    "when": "editorTextFocus"
  },
  // 关闭默认的 toggle 左侧主栏快捷键
  {
    "key": "ctrl+b",
    "command": "-workbench.action.toggleSidebarVisibility"
  },
  // toggle 左侧主栏
  {
    "key": "alt+1",
    "command": "workbench.action.toggleSidebarVisibility"
  },
  // toggle 右侧辅栏
  {
    "key": "alt+2",
    "command": "workbench.action.toggleAuxiliaryBar"
  },
  // 跳转到下一个错误
  {
    "key": "oem_6 d",
    "command": "editor.action.marker.nextInFiles",
    "when": "editorFocus && vim.mode != 'Insert'"
  },
  // 跳转到上一个错误
  {
    "key": "oem_4 d",
    "command": "editor.action.marker.prevInFiles",
    "when": "editorFocus && vim.mode != 'Insert'"
  },
  // 禁用默认的快速修复快捷键
  {
    "key": "ctrl+oem_period",
    "command": "-editor.action.quickFix",
    "when": "editorHasCodeActionsProvider && editorTextFocus && !editorReadonly"
  },
  // alt+enter 快速修复
  {
    "key": "alt+enter",
    "command": "editor.action.quickFix",
    "when": "editorHasCodeActionsProvider && editorTextFocus && !editorReadonly"
  }
]
